<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
    <android.support.v7.widget.CardView
        xmlns:card_view = "http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="3dp">
    <RelativeLayout
        android:id = "@+id/relativeExpnadable"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/Room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            android:text="    Room  1"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/allocate"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/Room"
            android:layout_marginEnd="18dp"
            android:backgroundTint="@color/colorPrimary"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Allocate"
            android:textAllCaps="false"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/GuestType2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/guest2"
            android:layout_alignBottom="@+id/guest2"
            android:layout_alignStart="@+id/GuestType1"
            android:text="Female"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/GuestType2"
            android:layout_alignEnd="@+id/allocate"
            android:text="BH 1"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/GuestType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/guest"
            android:layout_alignTop="@+id/guest"
            android:layout_marginStart="31dp"
            android:layout_toEndOf="@+id/guest"
            android:text="Male"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Room"
            android:layout_below="@+id/allocate"
            android:text="Guest 1" />

        <TextView
            android:id="@+id/guest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/guest"
            android:layout_below="@+id/guest"
            android:layout_marginTop="14dp"
            android:text="Guest 2" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/GuestType2"
            android:layout_toStartOf="@+id/allocate"
            android:text="Preference" />
    </RelativeLayout>>
    </android.support.v7.widget.CardView>
    </RelativeLayout>

