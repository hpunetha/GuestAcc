<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
    <android.support.v7.widget.CardView
        xmlns:card_view = "http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"

        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="12dp">
    <RelativeLayout
        android:id = "@+id/relativeExpnadable"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="15dp"
            android:text="Room  1"
            android:textSize="16sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <Button
            android:id="@+id/allocate"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Room"
            android:layout_alignBottom="@+id/Room"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:backgroundTint="@color/colorPrimary"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="Allocate"
            android:textAllCaps="false"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/GuestType2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/textView23"
            android:layout_alignBottom="@+id/textView23"
            android:layout_alignStart="@+id/GuestType1"
            android:text="Female"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/allocate"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/allocate"
            android:text="BH 1"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/GuestType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/preference"
            android:layout_alignBottom="@+id/preference"
            android:layout_alignStart="@+id/Room"
            android:text="Male"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Room"
            android:layout_below="@+id/allocate"
            android:visibility="gone"
            android:text="Guest 1" />

        <TextView
            android:id="@+id/guest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/guest"
            android:layout_below="@+id/guest"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:text="Guest 2" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_alignStart="@+id/preference"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/preference"
            android:text="( Preference )" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>

