<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/adminHomeCardView1"
            app:cardUseCompatPadding="true"
            app:cardElevation="5sp"
            app:cardCornerRadius="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:layout_margin="10sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status For Today"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                <View
                    android:layout_margin="4sp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />
                <TextView
                    android:id="@+id/adminBookedRooms"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Booked rooms : 5"/>

                <TextView
                    android:id="@+id/adminRoomsAvailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rooms Available: 4" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/adminHomeCardView2"
            app:cardUseCompatPadding="true"
            app:cardElevation="5sp"
            app:cardCornerRadius="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:layout_margin="10sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Approval"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                <View
                    android:layout_margin="4sp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 Requests"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/adminHomeCardView3"
            app:cardUseCompatPadding="true"
            app:cardElevation="5sp"
            app:cardCornerRadius="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:layout_margin="10sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify Payment"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                <View
                    android:layout_margin="4sp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4 Requests"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/adminHomeCardView4"
            app:cardUseCompatPadding="true"
            app:cardElevation="5sp"
            app:cardCornerRadius="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10sp"
                android:layout_margin="10sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty Registration Requests"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                <View
                    android:layout_margin="4sp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000" />
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 Requests"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>