<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view = "http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="12dp"
        android:clipToPadding="false"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:text="Name"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtView"
                android:layout_below="@+id/txtView"
                android:layout_marginTop="12dp"
                android:text="Email"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtview2"
                android:layout_below="@+id/txtview2"
                android:layout_marginTop="12dp"
                android:text="Type"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/faculty_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/txtView"
                android:layout_toEndOf="@+id/txtview3"
                android:text="TextView"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/faculty_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/txtview2"
                android:layout_toEndOf="@+id/txtview3"
                android:text="TextView"
                android:textAlignment="center" />

            <Button
                android:id="@+id/accept_faculty"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/faculty_type"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/txtView"
                android:backgroundTint="@color/colorPrimary"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="Accept"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/reject_faculty2"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/accept_faculty"
                android:layout_alignBottom="@+id/accept_faculty"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="33dp"
                android:backgroundTint="@color/colorPrimary"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/faculty_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/txtview3"
                android:layout_toEndOf="@+id/txtview3"
                android:text="TextView"
                android:textAlignment="center" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>